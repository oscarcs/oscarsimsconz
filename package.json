{
    "name": "oscarsimsconz",
    "type": "module",
    "scripts": {
        "dev": "echo \"export default false\" > ./src/config/is_prod.ts && vite",
        "client": "vite --mode client",
        "build": "$npm_execpath run version && vite build --mode client && cp -f ./dist/.vite/manifest.json ./src/lib/manifest.json && vite build",
        "preview": "wrangler pages dev dist",
        "deploy": "$npm_execpath run build && wrangler pages deploy dist",
        "version": "echo \"export default `date +'%s'`\" > ./src/config/build_time.ts && echo \"export default true\" > ./src/config/is_prod.ts"
    },
    "dependencies": {
        "@hono/react-renderer": "^1.0.1",
        "hono": "^4.11.7",
        "lucide-react": "^0.563.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-share": "^5.2.2",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20260203.0",
        "@hono/vite-cloudflare-pages": "^0.4.3",
        "@hono/vite-dev-server": "^0.25.0",
        "@tailwindcss/postcss": "^4.1.18",
        "@tailwindcss/typography": "^0.5.19",
        "@types/node": "^22.0.0",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "@types/remarkable": "^2.0.8",
        "postcss": "^8.5.6",
        "rollup-preserve-directives": "^1.1.3",
        "tailwindcss": "^4.1.18",
        "vite": "^7.3.1",
        "wrangler": "^4.62.0"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.57.1"
    }
}
